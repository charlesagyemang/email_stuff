    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :organisation_name , :class => "mdl-textfield__input" %>
    <%= f.label :Name , :class => "mdl-textfield__label"  %>

  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.email_field :email, :class => "mdl-textfield__input",  autofocus: true  %>
  <%= f.label :email , :class => "mdl-textfield__label"   %>

  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

    <%= f.password_field :password,  :class => "mdl-textfield__input",  autocomplete: "off" %>
    <%= f.label :password , :class => "mdl-textfield__label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />

  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password_confirmation,  :class => "mdl-textfield__input",  autocomplete: "off" %>
    <%= f.label :password_confirmation ,  :class => "mdl-textfield__label" %><br />

  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

